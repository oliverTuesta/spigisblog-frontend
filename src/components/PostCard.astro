---
import Post from '../models/Post';
import FormattedDate from '../components/FormattedDate.astro';

interface Props {
  post: Post;
}

const { post } = Astro.props;

import { Image } from 'astro:assets';
---

<div class="bg-transparent flex flex-row gap-5">
  <div class="basis-1/3">
    {
    post.thumbnail && 
    <a href=`/blog/${post.slug}`>
      <Image class="object-cover rounded-md h-48" width={300} height={300} src={post.thumbnail} alt="" />
    </a>
    }
  </div>
  <div class="basis-2/3 flex flex-col justify-between h-48">
    <div class="flex flex-col">
      <h3 class="card__title h3"><a href=`/blog/${post.slug}` class="link">{post.title}</a></h2>
      <p class="line-clamp-4 overflow-hidden">{post.summary}</p>
    </div>
    <div class="flex flex-row justify-between card__footer">  
      <p>
      <FormattedDate date={post.publishDate}/>
      </p>
      <a href=`/blog/${post.slug}` class="link">
        <p class="font-semibold uppercase">{post.category}</p>
      </a>
    </div>
  </div>
</div>
